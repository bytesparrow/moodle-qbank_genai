{{!
    @template qbank_genai/success

    Template which defines the data shown when question are ready.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "success": '[{"id": 2, "questiontext": "what is your name?"}, {"id": 3, "questiontext": "what is your age?"}]';
        "wwwroot": "https://moodle.example.com",
        "error": 4
    }
}}
{{#error}}
    <div class="qbank_genai_error">
        {{#str}}errornotcreated, qbank_genai{{/str}}
    </div>
{{/error}}

{{^error}}
    {{^single}}
        <div class="qbank_genai_created">
            {{#str}}createdquestionssuccess, qbank_genai{{/str}}.
        </div>
    {{/single}}

    {{#single}}
        <div class="qbank_genai_created">
            {{#str}}createdquestionsuccess, qbank_genai{{/str}}.
        </div>
    {{/single}}

    {{#success}}
        <div class="qbank_genai_questiontext">
            <i>{{{questiontext}}}</i>
            <a href="{{wwwroot}}/question/bank/previewquestion/preview.php?id={{id}}&courseid={{courseid}}"
                title="{{#str}}preview, qbank_genai{{/str}}" target="_blank">
                <i class="icon fa fa-search-plus fa-fw " aria-hidden="true"></i>
            </a>
        </div>
    {{/success}}

{{/error}}