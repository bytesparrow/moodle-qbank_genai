{{!
    @template qbank_genai/loading

    Template which defines the data shown when question are ready.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "wwwroot": "https://moodle.example.com",
        "courseid": "2",
        "uniqid" : "1234567890",
        "userid" : "2",
        "cron": "0"
    }
}}
{{#cron}}
    <div class="alert-warning">
        {{#str}}cronoverdue, qbank_genai{{/str}}
    </div>
{{/cron}}
<p class='qbank_genai_created' id="qbank_genai_success">
    {{#str}}generating, qbank_genai{{/str}}
    <br>
    {{#pix}}i/loading, core{{/pix}}
</p>
<div id="qbank_genai_info">
    {{>qbank_genai/bar}}
</div>

<div id="qbank_genai_uniqid" style="display:none;">{{uniqid}}</div>
<div id="qbank_genai_userid" style="display:none;">{{userid}}</div>
<div id="qbank_genai_courseid" style="display:none;">{{courseid}}</div>


<p class="d-flex">
    <a id="qbank_genai_backtocourse" class="btn btn-primary m-1" href='{{wwwroot}}/course/view.php?id={{courseid}}'>
        {{#str}}backtocourse, qbank_genai{{/str}}
    </a>
    <a id="qbank_genai_gotoquestionbank" class="btn btn-secondary m-1" href='{{wwwroot}}/question/edit.php?courseid={{courseid}}'>
        {{#str}}gotoquestionbank, qbank_genai{{/str}}
    </a>
    <a id="qbank_genai_generatemore" class="btn btn-secondary m-1" href='{{wwwroot}}/question/bank/genai/story.php?courseid={{courseid}}'>
        {{#str}}generatemore, qbank_genai{{/str}}
    </a>
</p>
